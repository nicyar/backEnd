<style>
    .table td,
    .table th {
        vertical-align: middle;
    }

    h1 {
        color: blue;
    }

    hr {
        background-color: #ddd;
    }

    .jumbotron {
        min-height: 100vh;
    }
</style>

<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    {{#if hayProductos}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.name}}</td>
                <td>${{this.price}}</td>
                <td><img width="50" src={{this.photo}} alt="not found"></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    <br>
    <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>

       <div class="Chat">
            <h2>Chat</h2>
            <form  class="chatForm" method="post"  action="/mensajes" >
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Tu email (obligatorio)" required>
                </div>
                <div class="form-group">
                    <input type="text" id="nombre" name="nombre" placeholder="Tu nombre" required>
                </div>
                <div class="form-group">
                    <input type="text" id="apellido" name="apellido" placeholder="Tu apellido" required>
                </div>
                <div class="form-group">
                    <input type="number" id="edad" name="edad" placeholder="Tu edad" required>
                </div>
                <div class="form-group">
                    <input type="text" id="alias" name="alias" placeholder="Alias" required>
                </div>
                <div class="form-group">
                    <input type="text" id="avatar" name="avatar" placeholder="URL a imagen" required>
                </div>
                <div class="form-group">
                    <input type="text" id="text" name="text" placeholder="Envia un mensaje" required>
                </div>

                <button type="submit" id="chatButton" class="btn btn-primary">Enviar</button>
            </form>   
        </div> 

     <span id="chat-box-message" ></span>

        </div>

    
